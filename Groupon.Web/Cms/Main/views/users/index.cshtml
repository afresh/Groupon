<div ng-controller="cms.views.users.index as vm">
    <h1>人员管理</h1>
    <div class="row">
        <div class="col-md-12">
            <button ng-click="vm.openUserCreationModal()" class="btn btn-primary pull-right"><i class="fa fa-plus"></i> 添加人员</button>
            <table class="table">
                <thead>
                    <tr>
                        <th>员工号</th>
                        <th>角色</th>
                        <th>姓名</th>
                        <th>email</th>
                        <th>手机号</th>
                        <th>账号状态</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="user in vm.users">
                        <td>{{user.userName}}</td>
                        <td>{{user.role.displayName}}</td>
                        <td>{{user.fullName}}</td>
                        <td>{{user.emailAddress}}</td>
                        <td>{{user.phoneNumber}}</td>
                        <td>{{user.isActive ? '活跃' : '冻结'}}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>