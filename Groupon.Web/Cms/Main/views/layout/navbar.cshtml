<div ng-controller="cms.views.layout.navbar as vm">
    <!-- Control Sidebar -->
    <aside class="main-sidebar" ng-class="isSidebarFull ? 'viewFramework-sidebar-full' : 'viewFramework-sidebar-mini'">
        <!-- sidebar: style can be found in sidebar.less -->
        <section class="sidebar">
            <!-- Sidebar user panel -->
            <div class="viewFramework-sidebar-top" ng-click="changeSidebarFull();"><i class="fa fa-bars" ng-class="isSidebarFull ? 'transform-90' : ''"></i></div>
            <div class="user-panel">
                <div class="pull-left image">
                    <img alt="User Image" class="img-circle" ng-src="{{vm.face}}" />
                </div>
                <div class="pull-left info" ng-if="isSidebarFull">
                    <p>&nbsp;&nbsp;&nbsp;{{vm.getShownUserName()}}</p>
                    <a href="javascript: void(0);"><i class="{{vm.sex}}"></i> {{vm.role}}</a>
                </div>
            </div>
            <!-- sidebar menu: : style can be found in sidebar.less -->
            <ul class="sidebar-menu">
                <li class="menu">菜单</li>
                <li ng-class="{'active': menu.isChosed}" ng-repeat="(index, menu) in vm.menus" ng-click="chooseMenu(menu);">
                    <a ng-href="{{menu.templateUrl ? '#/' + menu.url : 'javascript: void(0);'}}">
                        <i class="{{menu.icon}}  fa-lg"></i> <span ng-if="isSidebarFull">{{menu.name}}</span>
                    </a>
                </li>
            </ul>
        </section>
        <!-- /.sidebar -->
    </aside>
    <!-- /.control-sidebar -->
    <aside class="main-nextbar" ng-class="isSidebarFull ? 'viewFramework-nextbar-full' : 'viewFramework-nextbar-mini'" ng-if="vm.currentMenu.childMenus.length > 0">
        <section class="nextbar">
            <div class="viewFramework-nextbar-top">{{vm.currentMenu.name}}</div>
            <ul class="nextbar-menu">
                <li ng-class="{'active': menu.isChosed}" ng-repeat="(index, menu) in vm.currentMenu.childMenus" ng-click="chooseChildMenu(menu);">
                    <a ng-href="{{menu.templateUrl ? '#/' + menu.url : 'javascript: void(0);'}}">
                        <span>{{menu.name}}</span>
                    </a>
                </li>
            </ul>
        </section>
    </aside>
</div>